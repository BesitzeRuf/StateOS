#include <stm32f4_discovery.h>
#include <os.h>

void action( unsigned signo )
{
	(void) signo;

	LED_Tick();
}

void slave()
{
	cur_action(action);
	for (;;)
		tsk_yield();
}

OS_TSK(sla, 0, slave);

void master()
{
	tsk_delay(SEC);
	tsk_give(sla, 1);
}

OS_TSK(mas, 0, master);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
