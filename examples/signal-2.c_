#include <stm32f4_discovery.h>
#include <os.h>

sig_t sig = SIG_INIT();

void slave()
{
	unsigned x;

	x = sig_wait(&sig, SIGALL);
	LEDs = 1U << x;
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);
		sig_give(&sig, x++ % 4);
	}
}

tsk_t sla = TSK_INIT(0, slave);
tsk_t mas = TSK_INIT(0, master);

int main()
{
	LED_Init();

	tsk_start(&sla);
	tsk_start(&mas);
	tsk_stop();
}
