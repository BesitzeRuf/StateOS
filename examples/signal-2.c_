#include <stm32f4_discovery.h>
#include <os.h>

sig_id sig = SIG_CREATE(0);

void slave()
{
	unsigned x;

	x = sig_wait(sig, sigAll);
	LEDs = SIGSET(x);
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);
		sig_give(sig, x++ % 4);
	}
}

int main()
{
	LED_Init();

	tsk_start(TSK_CREATE(0, slave));
	tsk_start(TSK_CREATE(0, master));
	tsk_sleep();
}
