#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sig = Signal();

void slave()
{
	unsigned x;

	for (;;)
	{
		x = sig.wait(SIGALL);
		led = 1U << x;
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sig.give(x++ % 4);
	}
}

int main()
{
	auto sla = startTask(0, slave);
	auto mas = startTask(0, master);

	ThisTask::sleep();
}
