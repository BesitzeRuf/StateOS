#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sig = Signal();

void slave()
{
	for (;;)
	{
		sig.wait(SIGSET(0));
		led.tick();
	}
}

void master()
{
	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sig.give(0);
	}
}

int main()
{
	auto sla = startTask(0, slave);
	auto mas = startTask(0, master);

	ThisTask::sleep();
}
