#include <stm32f4_discovery.h>
#include <os.h>

OS_EVT(evt, 1);

void slave()
{
	unsigned x;

	for (;;)
	{
		evt_wait(evt, &x);
		LEDs = x;
	}
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		tsk_delay(SEC);
		evt_give(evt, x);
		x = (x << 1) | (x >> 3);
	}
}

OS_WRK(sla, 0, slave,  256);
OS_WRK(mas, 0, master, 256);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
