#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto mtx = Mutex(mtxDefault);
auto cnd = ConditionVariable();

void slave()
{
	mtx.wait();
	cnd.wait(mtx);
	mtx.give();
	led.tick();
}

void master()
{
	ThisTask::delay(SEC);
	mtx.wait();
	cnd.give(cndOne);
	mtx.give();
}

auto sla = Task(0, slave);
auto mas = Task(0, master);

int main()
{
	sla.start();
	mas.start();

	tsk_stop();
}
