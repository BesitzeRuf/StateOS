#include <stm32f4_discovery.h>
#include <os.h>

OS_NFO(nfo);

void slave()
{
	LEDs = nfo_wait(nfo);
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		tsk_delay(SEC);
		nfo_give(nfo, x);
		x = (x << 1) | (x >> 3);
	}
}

OS_TSK(sla, 0, slave,  256);
OS_TSK(mas, 0, master, 256);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
