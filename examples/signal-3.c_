#include <stm32f4_discovery.h>
#include <os.h>

OS_SIG(sig);

void slave()
{
	unsigned x;

	x = sig_wait(sig, sigAny);
	LEDs = x;
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		tsk_delay(SEC);
		sig_give(sig, x);
		x = (x << 1) | (x >> 3);
	}
}

OS_TSK(sla, 0, slave);
OS_TSK(mas, 0, master);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
